<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_bg"
    tools:context=".PatientActivity">

    <TextView
        android:id="@+id/home"
        android:layout_width="185dp"
        android:layout_height="32dp"
        android:text="Home"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:typeface="sans"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="213dp"
        android:layout_height="25dp"
        android:text="Welcome User"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home"
        app:layout_constraintVertical_bias="0.048" />


    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="105dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout5"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout6"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintVertical_bias="0.569">

        <ImageButton
            android:id="@+id/search_imgbtn"
            android:layout_width="51dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:contentDescription="search"
            android:scaleType="fitCenter"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/search_textview"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Search"
            android:textColor="#009688"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout6"
        android:layout_width="128dp"
        android:layout_height="105dp"
        android:layout_marginEnd="72dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintVertical_bias="0.566">

        <ImageButton
            android:id="@+id/patient_req_bt"
            android:layout_width="51dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:contentDescription="folder"
            android:scaleType="fitCenter"
            android:src="@drawable/patientreq" />

        <TextView
            android:id="@+id/folder_textview"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Health news"
            android:textColor="#009688"
            android:textSize="15sp" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout5"
        android:layout_width="128dp"
        android:layout_height="105dp"
        android:layout_marginTop="248dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout7"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading">

        <ImageButton
            android:id="@+id/doctor_imgbtn"
            android:layout_width="51dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:contentDescription="doctors"
            android:scaleType="fitCenter"
            android:src="@drawable/doctor" />

        <TextView
            android:id="@+id/doctor_textview"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="My Doctors"
            android:textColor="#009688"
            android:textSize="15sp" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout7"
        android:layout_width="128dp"
        android:layout_height="105dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="68dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading">

        <ImageButton
            android:id="@+id/profile_imgbtn"
            android:layout_width="51dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:contentDescription="profie"
            android:scaleType="fitCenter"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/profile_textview"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Profile"
            android:textColor="#009688"
            android:textSize="15sp"
            tools:ignore="TextSizeCheck" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
